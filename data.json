  "consonants": {
    "ka_varga": {
      "title": "Ka Varga (क वर्ग) - Velar Consonants",
      "description": "Consonants made with the back of the tongue touching the soft palate",
      "articulationPlace": "Velar (soft palate)",
      "lessons": [
        {
          "id": 13,
          "letter": "क",
          "romanization": "ka",
          "soundDescription": "Voiceless velar stop",
          "mouthPosition": {
            "tongue": "Back part raises to soft palate, firm contact",
            "lips": "Neutral and relaxed",
            "jaw": "Slightly dropped, teeth apart",
            "airFlow": "Build pressure, sudden release, no aspiration",
            "vocalCords": "Not vibrating (voiceless)"
          },
          "practiceWords": [
            {"hindi": "काम", "romanization": "kaam", "meaning": "work"},
            {"hindi": "कल", "romanization": "kal", "meaning": "yesterday/tomorrow"}
          ],
          "keyPoints": [
            "Back of tongue touches soft palate",
            "No aspiration - quick release",
            "Like 'k' in \"skip\" not \"kite\"",
            "Keep tongue tip relaxed behind lower teeth"
          ],
          "commonMistakes": [
            "Using tongue tip instead of back",
            "Adding too much breath (aspiration)",
            "Making contact too far forward"
          ]
        },
        {
          "id": 14,
          "letter": "ख",
          "romanization": "kha",
          "soundDescription": "Aspirated voiceless velar stop",
          "mouthPosition": {
            "tongue": "Same position as क",
            "lips": "Neutral",
            "jaw": "Same as क",
            "airFlow": "Strong puff of air after release",
            "vocalCords": "Not vibrating"
          },
          "practiceWords": [
            {"hindi": "खाना", "romanization": "khaana", "meaning": "food"},
            {"hindi": "खुश", "romanization": "khush", "meaning": "happy"}
          ],
          "keyPoints": [
            "Same position as क but with aspiration",
            "Strong puff of air after release",
            "Like 'k' in \"kite\" or \"key\"",
            "Paper should flutter if held near mouth"
          ]
        }
      ]
    },
    "cha_varga": {
      "title": "Cha Varga (च वर्ग) - Palatal Consonants",
      "description": "Consonants made with the middle of the tongue touching the hard palate",
      "articulationPlace": "Palatal (hard palate)",
      "lessons": [
        {
          "id": 15,
          "letter": "च",
          "romanization": "cha",
          "soundDescription": "Voiceless palatal stop",
          "mouthPosition": {
            "tongue": "Middle part touches hard palate",
            "lips": "Neutral",
            "jaw": "Slightly open",
            "airFlow": "Clean release, no aspiration",
            "vocalCords": "Not vibrating"
          },
          "practiceWords": [
            {"hindi": "चाय", "romanization": "chaay", "meaning": "tea"},
            {"hindi": "चार", "romanization": "chaar", "meaning": "four"}
          ],
          "keyPoints": [
            "Middle tongue touches hard palate",
            "More forward than क",
            "Clean, crisp sound",
            "No aspiration"
          ]
        }
      ]
    },
    "ta_varga_retroflex": {
      "title": "Ta Varga - Retroflex (ट वर्ग)",
      "description": "Consonants made with the tongue tip curled back to touch the roof of mouth",
      "articulationPlace": "Retroflex (roof of mouth)",
      "lessons": [
        {
          "id": 16,
          "letter": "ट",
          "romanization": "ṭa",
          "soundDescription": "Voiceless retroflex stop",
          "mouthPosition": {
            "tongue": "Tip curls back to touch roof of mouth",
            "lips": "Neutral",
            "jaw": "Open",
            "airFlow": "Clean release from roof",
            "vocalCords": "Not vibrating"
          },
          "practiceWords": [
            {"hindi": "टमाटर", "romanization": "ṭamaṭar", "meaning": "tomato"},
            {"hindi": "पेट", "romanization": "peṭ", "meaning": "stomach"}
          ],
          "keyPoints": [
            "Tongue tip curls back",
            "Contact with roof of mouth",
            "Distinct from dental त",
            "More 'hollow' sound"
          ]
        }
      ]
    },
    "ta_varga_dental": {
      "title": "Ta Varga - Dental (त वर्ग)",
      "description": "Consonants made with the tongue tip touching the teeth",
      "articulationPlace": "Dental (teeth)",
      "lessons": [
        {
          "id": 17,
          "letter": "त",
          "romanization": "ta",
          "soundDescription": "Voiceless dental stop",
          "mouthPosition": {
            "tongue": "Tip touches upper teeth",
            "lips": "Neutral",
            "jaw": "Open",
            "airFlow": "Release from teeth contact",
            "vocalCords": "Not vibrating"
          },
          "practiceWords": [
            {"hindi": "ताला", "romanization": "taala", "meaning": "lock"},
            {"hindi": "मित्र", "romanization": "mitra", "meaning": "friend"}
          ],
          "keyPoints": [
            "Tongue tip touches teeth",
            "More forward than ट",
            "Sharper sound than ट",
            "Common in Hindi words"
          ]
        }
      ]
    },
    "pa_varga": {
      "title": "Pa Varga (प वर्ग) - Labial Consonants",
      "description": "Consonants made with the lips",
      "articulationPlace": "Bilabial (both lips)",
      "lessons": [
        {
          "id": 18,
          "letter": "प",
          "romanization": "pa",
          "soundDescription": "Voiceless bilabial stop",
          "mouthPosition": {
            "tongue": "Completely relaxed, not involved",
            "lips": "Both lips come together, complete closure",
            "jaw": "Relaxed and neutral",
            "airFlow": "Air builds behind lips, quick release, no aspiration",
            "vocalCords": "Not vibrating (voiceless)"
          },
          "practiceWords": [
            {"hindi": "पानी", "romanization": "paanii", "meaning": "water"},
            {"hindi": "पाँच", "romanization": "paanch", "meaning": "five"}
          ],
          "keyPoints": [
            "Easiest consonant - just close lips",
            "No tongue position needed",
            "Like 'p' in \"spin\" not \"pin\"",
            "No breath puff (unaspirated)"
          ],
          "commonMistakes": [
            "Adding aspiration (breath puff)",
            "Making lips too tense",
            "Unclear lip closure"
          ]
        },
        {
          "id": 19,
          "letter": "फ",
          "romanization": "pha",
          "soundDescription": "Aspirated voiceless bilabial stop",
          "mouthPosition": {
            "tongue": "Relaxed",
            "lips": "Same closure as प",
            "jaw": "Neutral",
            "airFlow": "Strong puff of air after release",
            "vocalCords": "Not vibrating"
          },
          "practiceWords": [
            {"hindi": "फल", "romanization": "phal", "meaning": "fruit"},
            {"hindi": "फूल", "romanization": "phool", "meaning": "flower"}
          ],
          "keyPoints": [
            "Same lip position as प",
            "Strong aspiration after release",
            "Like 'p' in \"pin\" or \"phone\"",
            "Paper should flutter"
          ]
        }
      ]
    },
    "ya_ra_la_va": {
      "title": "Approximants (य र ल व श)",
      "description": "Semi-vowels and fricatives",
      "lessons": [
        {
          "id": 20,
          "letter": "य",
          "romanization": "ya",
          "soundDescription": "Palatal approximant",
          "mouthPosition": {
            "tongue": "Middle approaches hard palate (doesn't touch)",
            "lips": "Neutral",
            "jaw": "Slightly open",
            "airFlow": "Smooth flow, no blockage",
            "vocalCords": "Vibrating"
          },
          "practiceWords": [
            {"hindi": "यह", "romanization": "yah", "meaning": "this"},
            {"hindi": "योग", "romanization": "yoga", "meaning": "yoga"}
          ],
          "keyPoints": [
            "Like English 'y' in \"yes\"",
            "No complete closure",
            "Smooth gliding sound",
            "Often starts syllables"
          ]
        },
        {
          "id": 21,
          "letter": "र",
          "romanization": "ra",
          "soundDescription": "Alveolar trill",
          "mouthPosition": {
            "tongue": "Tip vibrates against alveolar ridge",
            "lips": "Neutral",
            "jaw": "Open",
            "airFlow": "Causes tongue vibration",
            "vocalCords": "Vibrating"
          },
          "practiceWords": [
            {"hindi": "राम", "romanization": "raam", "meaning": "Ram"},
            {"hindi": "गर्म", "romanization": "garm", "meaning": "hot"}
          ],
          "keyPoints": [
            "Tongue tip vibrates (trill)",
            "Different from English 'r'",
            "Light, quick vibration",
            "Very common in Hindi"
          ]
        }
      ]
    }
